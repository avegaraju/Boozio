<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/list_item_border"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/wishListWhiskeyImage"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/abc_seekbar_thumb_material"
        android:layout_marginEnd="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
          android:id="@+id/wishListWhiskeyNameTextView"
          android:textSize="16dp"
          android:textStyle="bold"
          android:text="Hey"
          android:layout_width="wrap_content"
          android:layout_alignBaseline="@id/wishListWhiskeyImage"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/wishListDistilleryTextView"
          android:textSize="14dp"
          android:text="Hey"
          android:layout_width="wrap_content"
          android:layout_alignBaseline="@id/wishListWhiskeyImage"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/wishListAbvTextView"
          android:textSize="14dp"
          android:text="46% alcohol by volume"
          android:layout_width="wrap_content"
          android:layout_alignBaseline="@id/wishListWhiskeyImage"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    
</LinearLayout>
